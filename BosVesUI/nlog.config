<?xml version="1.0" encoding="utf-8"?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwConfigExceptions="true"
      internalLogLevel="info"
      internalLogFile="logs/app.txt">

	<!-- Define targets: where to write logs -->
	<targets>
		<!-- Write logs to a file -->
		<target xsi:type="File" name="logfile" fileName="logs/app.txt"
				layout="${longdate}|${level:uppercase=true}|${logger}|${message}" />
	</targets>

	<!-- Define logging rules: which loggers and levels to write to which targets -->
	<rules>
		<!-- Log everything from Info level and above to file -->
		<logger name="*" minlevel="Info" writeTo="logfile" />
	</rules>
</nlog>
