@page "/"
@inject GruzGdData gruzgddata
@inject NavigationManager navManager

<PageTitle>BosVes</PageTitle>
<div>

    <button class="btn btn-primary" @onclick=redirect>Go to SampleData</button>
    @* <br/>
    <button class="btn btn-primary" @onclick=inputtest>Input many</button>
    <br/>
    <button class="btn btn-primary" @onclick=inputTwo>inputTwo</button>
    <br/> *@
    <br />
    <button class="btn btn-primary" @onclick=inputThree>KorrGpri</button>
    <br/>
   @*  <button class="btn btn-primary" @onclick=inputAdaptive>inputAdaptive</button>*@
    <br/> 
    <button class="btn btn-primary" @onclick=tableOne>tableOne</button>

</div>

<h1 class="page-heading text-uppercase mb-4">New Bos Ves</h1>

<div class="row">
    <div class="col text-center">
        <h2>Show All</h2>

        @if (gruzes == null)
        {
            <p><em>Loading...</em></p>
        }
        else
        {
            <div>
                @foreach (var gruz in gruzes)
                {
                    <div>
                        <span>Gruz: @gruz.GRUZIK</span>
                        <span>kod_sap: @gruz.KOD_SAP</span>
                        <span>NAME_OZM: @gruz.NAME_OZM</span>
                        <span>NAME_SAP: @gruz.NAME_SAP</span>
                    </div>

                }
            </div>
        }
    </div>
</div>

@code {
    private List<GruzGdModel> gruzes { get; set; }

    protected override async Task OnInitializedAsync()
    {
        gruzes = (List<GruzGdModel>)await gruzgddata.GetAll();
    }

    private void redirect()
    {
        navManager.NavigateTo("/SampleData");
    }

    private void inputtest()
    {
        navManager.NavigateTo("/Pages/InputMany");
    }

    private void inputTwo()
    {
        navManager.NavigateTo("/Pages/InputTwo");
    }

    private void inputThree()
    {
        navManager.NavigateTo("/Pages/KorrGpri");
    }

    private void inputAdaptive()
    {
        navManager.NavigateTo("/Pages/InputAdaptive");
    }

    private void tableOne()
    {
        navManager.NavigateTo("/Pages/TableOne");
    }

}

